@model MvcBoard.Models.Login 

<h2>로그인</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.UserId, "ID")
            @Html.TextBoxFor(model => model.UserId, new { @class = "form-control", @placeholder = "사용자 ID 입력" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.UserId)</span>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserPassword, "PW")
            @Html.PasswordFor(model => model.UserPassword, new { @class = "form-control", @placeholder = "사용자 PW 입력" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.UserId)</span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">로그인</button>
        </div>
    </form>

}

