@model MvcBoard.Models.Board

@{
    ViewBag.Title = "Edit";
}

<h2>수정</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.board_postNo)
    @Html.HiddenFor(m => m.board_readCount)
    @Html.HiddenFor(m => m.board_writeTime)

    <table class="tbl_basic">
        <tr>
            <th style="width: 10%;">이름</th>
            <td>@Html.TextBoxFor(m => m.board_name)</td>
        </tr>
        <tr>
            <th>제목</th>
            <td colspan="3">@Html.TextBoxFor(m => m.board_subject)</td>
        </tr>
        <tr>
            <th>내용</th>
            <td>@Html.TextAreaFor(m => m.board_content, 20, 30, htmlAttributes: new { style = "width: 100%; max-width: 70%;" })</td>
        </tr>
    </table>
    <p>

    </p>
    <div class="text-center">
        <button type="submit" class="btn btn-primary" onclick="return confirm('변경 사항을 저장하시겠습니까?')">저장</button>
        @Html.ActionLink("취소", "Index", null, new { @class = "btn btn-success" })
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}